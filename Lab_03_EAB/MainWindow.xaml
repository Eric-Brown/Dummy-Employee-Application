<Window x:Class="Lab_03_EAB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_03_EAB"
        mc:Ignorable="d"
        Title="Lab_03_EAB" Height="300" Width="525">
    <Grid x:Name="GrdMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Name="MnuMain" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4">
            <MenuItem Name="MnuFile" Header="File">
                <MenuItem Name="MnuAbout" Header="About" Click="MnuAbout_Click"/>
                <MenuItem Name="MnuExit" Header="Exit" Click="MnuExit_Click"/>
            </MenuItem>
        </Menu>
        <Label Name="LblEmpType" Content="Employee Type:" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right"/>
        <ComboBox Name="CBxEmpType" Grid.Row="1" Grid.Column="1" SelectionChanged="CBxEmpType_SelectionChanged"/>
        <Label Name="LblEmpID" Content="Employee ID:" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right"/>
        <TextBox x:Name="TxtEmpID" Grid.Row="2" Grid.Column="1"/>
        <Label Name="LblFirst" Content="First Name:" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right"/>
        <TextBox Name="TxtFirst" Grid.Row="3" Grid.Column="1"/>
        <Label Name="LblLast" Content="Last Name:" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right"/>
        <TextBox Name="TxtLast" Grid.Row="4" Grid.Column="1"/>
        <Label Name="LblSup1" Content="Temp" Visibility="Visible" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right"/>
        <TextBox Name="TxtSup1" Grid.Row="5" Grid.Column="1" Visibility="Visible"/>
        <Label Name="LblSup2" Content="Temp" Visibility="Collapsed" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Right"/>
        <TextBox Name="TxtSup2" Grid.Row="6" Grid.Column="1" Visibility="Collapsed"/>
        <Label Name="LblSup3" Content="Temp" Visibility="Collapsed" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Right"/>
        <TextBox Name="TxtSup3" Grid.Row="7" Grid.Column="1" Visibility="Collapsed"/>
        <RichTextBox Name ="RTBxOutput" MaxHeight="220" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="7" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        <Button x:Name="BtnAddEmp" Content="Add New Employee" Grid.Row="8" Grid.Column="3" VerticalAlignment="Bottom" Click="BtnAddEmp_Click"/>
        <Button x:Name="BtnTest" Content="Test Data" Grid.Row="8" Grid.Column="2" VerticalAlignment="Bottom" Click="BtnTest_Click"/>
        <Label x:Name="LblOutput" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" IsEnabled="False">
            <TextBlock x:Name="TxtBlkLblOutput" Text="Output" TextDecorations="Underline"/>
        </Label>
    </Grid>
</Window>
